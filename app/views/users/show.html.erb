<div class="row" style="padding-top: 20px">

  <div class="col-lg-3">

    <div class="card">
      <div class="card-header text-center bg-info text-white">
        Info sur l'utilisateur
      </div>
      <div class="card-body text-center">

        <p>Login : <strong> <%= @user.username  %> </strong></p>
        <p>Nombre de posts : <%= @user.posts.count  %> </p>

        <% if user_signed_in?  %>

          <% if current_user.followers.where(id: @user.id).count < 1  %>
            <button class="btn btn-warning text-white follow" user-id="<%= @user.id %>">
              <i class="fa fa-user-plus" aria-hidden="true"></i>
              <span>Suivre</span>
            </button>
          <% else %>
            <button class="btn btn-danger text-white unfollow" user-id="<%= @user.id %>">
              <i class="fa fa-user-times" aria-hidden="true"></i>
              <span>Ne plus suibre</span>
            </button>
          <% end %>

        <% else %>

          <button class="btn btn-warning btn-block text-white" disabled>
            <i class="fa fa-user-plus" aria-hidden="true"></i>
            Suivre
          </button>

        <% end %>

      </div>
    </div>

  </div>

  <div class="col-lg-3">
    <div class="card">
      <div class="card-header text-center bg-primary text-white">
        Ses posts (<%= @user.posts.count  %>)
      </div>
      <div class="card-body text-center">

        <% @user.posts.each do |post| %>

          <div class="card">
            <div class="card-body">
              <p> <%= simple_format(post.content) %> </p>
              <p> <%= link_to post.user.username, controller: "users", action: "show", id: post.user %> </p>
              <button class="btn btn-success"><i class="fa fa-thumbs-up" aria-hidden="true"></i></button>
              <button class="btn btn-primary"><i class="fa fa-retweet" aria-hidden="true"></i></button>
            </div>
          </div>

        <% end %>

      </div>
    </div>

  </div>

  <div class="col-lg-3">
    <div class="card">
      <div class="card-header text-center bg-primary text-white">
        Ses followers (<%= @user.followers.count  %>)
      </div>
      <div class="card-body text-center">

        <% @user.followers.each do |follower| %>

          <li class="media">
            <a href="https://www.templatebook.antonbourtnik.fr/users/show/10" title="Voir le profil de Yann ">
              <img class="img-responsive" src="https://www.templatebook.antonbourtnik.fr/storage/avatars/default-men.png" alt="Avatar user Yann" onerror="this.onerror=null;this.src='/img/default-image.png';">
            </a>
            <div class="media-body text-right">
              <h3><%= link_to follower.username, controller: "users", action: "show", id: user %> </h3>
              <p class="small">
                <strong> <%= follower.followers.count %> follower(s)</strong> - <strong><%= follower.posts.count %> post(s)</strong>
              </p>
              <% if current_user.followers.where(id: follower.id).count < 1  %>
                <button class="btn btn-warning text-white follow" user-id="<%= follower.id %>">
                  <i class="fa fa-user-plus" aria-hidden="true"></i>
                  <span>Suivre</span>
                </button>
              <% else %>
                <button class="btn btn-danger text-white unfollow" user-id="<%= follower.id %>">
                  <i class="fa fa-user-times" aria-hidden="true"></i>
                  <span>Ne plus suibre</span>
                </button>
              <% end %>
            </div>
          </li>

        <% end %>

      </div>
    </div>

  </div>

  <div class="col-lg-3">
    <div class="card">
      <div class="card-header text-center bg-primary text-white">
        Ses abonnements (<%= @user.followings.count  %>)
      </div>
      <div class="card-body text-center">

        <% @user.followings.each do |following| %>

          <li class="media">
            <a href="https://www.templatebook.antonbourtnik.fr/users/show/10" title="Voir le profil de Yann ">
              <img class="img-responsive" src="https://www.templatebook.antonbourtnik.fr/storage/avatars/default-men.png" alt="Avatar user Yann" onerror="this.onerror=null;this.src='/img/default-image.png';">
            </a>
            <div class="media-body text-right">
              <h3><%= link_to following.username, controller: "users", action: "show", id: user %> </h3>
              <p class="small">
                <strong> <%= following.followers.count %> follower(s)</strong> - <strong><%= following.posts.count %> post(s)</strong>
              </p>
              <% if current_user.followers.where(id: following.id).count < 1  %>
                <button class="btn btn-warning text-white follow" user-id="<%= following.id %>">
                  <i class="fa fa-user-plus" aria-hidden="true"></i>
                  <span>Suivre</span>
                </button>
              <% else %>
                <button class="btn btn-danger text-white unfollow" user-id="<%= following.id %>">
                  <i class="fa fa-user-times" aria-hidden="true"></i>
                  <span>Ne plus suivre</span>
                </button>
              <% end %>
            </div>
          </li>

        <% end %>

      </div>
    </div>

  </div>

</div>