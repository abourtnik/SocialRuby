<div class="row" style="padding-top: 20px">

  <div class="col-lg-10 mx-auto">

    <div class="card">

      <div class="card-header text-center bg-primary text-white">
        Editer votre post
      </div>

      <div class="card-body text-center">

        <%= form_for @post do |f| %>
          <div class="form-group">
            <label for="">Contenu de l'article</label>
            <%= f.text_area :content , class: "form-control" , rows:"8" %>
            <small class="form-text text-muted">Maximum 100 caract√©res</small>
          </div>

          <div class="form-group">
            <button class="btn btn-primary" type="submit"> <i class="fa fa-pencil" aria-hidden="true"></i>  Modifier l'article</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>