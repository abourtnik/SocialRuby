<div class="row" style="padding-top: 20px">

  <div class="col-lg-6">

    <div class="card">
      <div class="card-header text-center">
        Les postes les plus populaire !!
      </div>
      <div class="card-body text-center">

        <% @posts.each do |post| %>

          <div class="card">
            <div class="card-body">
              <p> <%= simple_format(post.content) %> </p>
              <p> <%= link_to post.user.username, controller: "users", action: "show", id: post.user %> </p>
              <button class="btn btn-success"><i class="fa fa-thumbs-up" aria-hidden="true"></i></button>
              <button class="btn btn-primary"><i class="fa fa-retweet" aria-hidden="true"></i></button>
            </div>
          </div>

        <% end %>

      </div>
    </div>

  </div>

  <div class="col-lg-6">
    <div class="card">
      <div class="card-header text-center">
        Nouveau sur Social Ryby ?
      </div>
      <div class="card-body text-center">
        <i>Inscrivez-vous maintenant pour obtenir votre fil d'actualités personnalisé ! </i>
        <hr>
        <%= link_to "S'inscrire", new_user_registration_path , class: 'btn btn-success btn-block' %>
      </div>
    </div>

  </div>

</div>
