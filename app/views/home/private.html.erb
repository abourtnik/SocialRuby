<div class="row" style="padding-bottom: 20px">

  <div class="col-lg-8">

    <div class="card">
      <div class="card-header text-center bg-success text-white">
        Bonjour <strong><%= current_user.username %> !!</strong>
      </div>
      <div class="card-body text-center">

        <i>Partagez quelque chose aujourd'hui !!</i>
        <hr>

        <%= form_for @post do |f| %>
          <div class="form-group">
            <label for="">Votre message :</label>
            <%= f.text_area :content , class: 'form-control' %>
            <small class="form-text text-muted">Maximum 100 caractéres</small>
          </div>
          <div class="form-group">
            <button class="btn btn-success btn-block" type="submit">
              <i class="fa fa-share" aria-hidden="true"></i>
              Partager
            </button>
          </div>
        <% end %>
      </div>
    </div>

  </div>

  <div class="col-lg-4">

    <div class="card">
      <div class="card-header text-center bg-info text-white">
        Modifez votre profil et vos posts
      </div>
      <div class="card-body text-center">
        <a href="<%= edit_user_registration_path %>" class="btn btn-info">
          <i class="fa fa-user" aria-hidden="true"></i>
          Accéder a votre compte
        </a>
      </div>
    </div>

    <div style="margin-top: 10px"; class="card">
      <div class="card-header text-center bg-info text-white">
        Acceder a votre profil public
      </div>
      <div class="card-body text-center">
        <a href="<%= user_show_path(current_user) %>" class="btn btn-info">
          <i class="fa fa-eye" aria-hidden="true"></i>
          Mon profil public
        </a>
      </div>
    </div>

  </div>

</div>

<div class="row">

  <div class="col-lg-8">

    <div class="card">
      <div class="card-header text-center bg-primary text-white">
        Votre mur
      </div>
      <div class="card-body text-center">

        <% if @user_followings_posts.count > 0 && @retweets_user_posts.count > 0 %>

          <% @user_followings_posts.each do |post| %>
            <%= render "partials/post" , :post => post%>
          <% end %>

          <% @retweets_user_posts.each do |post| %>
            <%= render "partials/post" , :post => post , :user_id => current_user.id %>
          <% end %>

        <% else %>
          <p>Aucun contenu pour vous pour l'instant</p>
        <% end %>

      </div>
    </div>

  </div>

  <div class="col-lg-4">

    <div class="card">
      <div class="card-header text-center bg-warning text-white">
        Suggestions d'amis
      </div>
      <div class="card-body text-center">

            <ul class="list-unstyled">

            <% if @users.each do |user| %>
                <%= render "partials/users" , user: user %>
                <hr>
            <% end.empty? %>
                <p> Aucune suggestion d'amis pour l'instant</p>
            <% end %>

            </ul>
      </div>
    </div>

  </div>

</div>